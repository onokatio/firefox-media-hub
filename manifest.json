{

  "manifest_version": 2,
  "name": "Firefox Media Hub",
  "version": "1.0",
 
  "description": "Add media control panel beyond tab.",

  "permissions": [
	  "tabs",
	  "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],

  "browser_action": {
    "default_title": "Media Hub",
    "default_popup": "popup.html"
  }

}
